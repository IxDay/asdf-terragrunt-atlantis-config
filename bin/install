#!/usr/bin/env bash

set -euo pipefail

[[ -z ${ASDF_INSTALL_TYPE+x} ]] && echo "ASDF_INSTALL_TYPE is required" && exit 1
[[ -z ${ASDF_INSTALL_VERSION+x} ]] && echo "ASDF_INSTALL_VERSION is required" && exit 1
[[ -z ${ASDF_INSTALL_PATH+x} ]] && echo "ASDF_INSTALL_PATH is required" && exit 1

install() {
	local install_type=$1
	[[ ${install_type} != "version" ]] && echo "intall type, ${install_type}, is not supported" && exit 1

	local version=$2
	local install_path=$3

	local bin_install_path="${install_path}/bin"

	local platform
	platform=$(uname | tr '[:upper:]' '[:lower:]')
	case "${platform}" in
	darwin) platform="macos" ;;
	esac

	local arch
	arch=$(uname -m)
	case "${arch}" in
	x86_64) arch="amd64" ;;
	aarch64) arch="arm64" ;;
	esac

	local binary="terragrunt-atlantis-config_${version}_${platform}_${arch}"

	local download_url
	download_url="https://github.com/transcend-io/terragrunt-atlantis-config/releases/download/v${version}/${binary}.tar.gz"

	mkdir -p "${bin_install_path}"

	echo "Downloading terragrunt-atlantis-config from ${download_url}"

	pushd "${bin_install_path}" >/dev/null

	curl -sL "${download_url}" | tar zx -O "${binary}/${binary}" > "${bin_install_path}/terragrunt-atlantis-config"

	chmod +x "${bin_install_path}/terragrunt-atlantis-config"

	ln -s . "${install_path}/terragrunt-atlantis-config"

	popd >/dev/null
}

install "${ASDF_INSTALL_TYPE}" "${ASDF_INSTALL_VERSION}" "${ASDF_INSTALL_PATH}"
